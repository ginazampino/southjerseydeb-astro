---

// Astro props:
interface Props {
    text: string,
    author: string,
    relationship: string
}

const { text, author, relationship } = Astro.props;

---

<li class="quote">
    <p>
        {text}
        <span>{author}, {relationship}</span>
    </p>
</li>

<style lang="scss">
    @import '../../styles/utility.scss';

    li {
        @include flex(center, center, column);
        height: 100%;
        opacity: 0;
        position: absolute;
        top: 0;
        transition: 2s ease-in-out;
        width: 100%;

        &.active {
            opacity: 1;
        }

        &.only-child {
            opacity: 1;
            position: relative;
        }
    }

    p {
        @include flex(center, center, column);
        font-size: rempx(16px);
        font-style: italic;
        font-weight: 300;
        line-height: rempx(22px);
        text-align: center;

        @media (min-width: $screen-md) {
            font-size: rempx(20px);
            line-height: rempx(26px);
        }

        span {
            background-color: rgba($color-accent, .25);
            color: $color-accent-xxdk;
            display: inline-block;
            font-size: rempx(16px);
            font-style: italic;
            margin-top: rempx(20px);
            padding: rempx(2px) rempx(12px);

            @media (min-width: $screen-md) {
                font-size: rempx(18px);
            }
        }
    }
</style>